{% layout layout.liquid %}

{% block content %}
    <header class="main-header post-head no-cover">
        <nav class="main-nav clearfix">
            <a class="back-button" href="/"><i class="icon-left-open"></i> Home</a>
            <a class="subscribe-button icon-feed" href="/feed.xml"><i class="icon-rss"></i> Subscribe</a>
        </nav>
    </header>

    <main class="content" role="main" itemprop="mainEntityOfPage" itemscope itemtype="https://schema.org/WebPage">

        <article class="post" itemprop="mainEntity" itemscope itemtype="http://schema.org/BlogPosting">

            <header class="post-header">
                <h1 class="post-title" itemprop="headline">{{ title }}</h1>
            </header>

            <section class="post-content" itemprop="articleBody">
                    {{ content }}
            </section>

            <footer class="post-footer">
                <!-- If we want to display author's name and bio -->
                {% if siteData.author_name %}
                    <figure class="author-image">
                        <a class="img" href="/" style="background-image: url(/assets/images/profile.jpg)">
                        <span class="hidden">{{ siteData.author_name }}'s Picture</span></a>
                    </figure>
                    <section class="author" itemprop="author" itemscope itemtype="https://schema.org/Person">
                        <!-- Author Name -->
                        <h4 itemprop="name">{{ siteData.author_name }}</h4>
                        <!-- Author Bio -->
                        <p>
                            {{ siteData.author_description }} Si quieres enviarme alg√∫n comentario, puedes <a href="/about">contactar conmigo</a>.
                        </p>
                    </section>
                {% endif %}

                <!-- Share links section -->
                <section class="share">
                    <h4>Share this post</h4>
                    <a href="http://twitter.com/share?text={{ title }}&amp;url={{ siteData.url }}{{ page.url }}"
                        onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;" rel="nofollow noopener">
                        <span class="icon-twitter"></span>
                    </a>
                    <a href="https://www.facebook.com/sharer/sharer.php?u={{ siteData.url }}{{ page.url }}"
                        onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;" rel="nofollow noopener">
                        <span class="icon-facebook"></span>
                    </a>
                    <a href="whatsapp://send?text={{ title }}%20{{ siteData.url }}{{ page.url }}" rel="nofollow noopener">
                        <span class="icon-whatsapp"></span>
                    </a>
                </section>
            </footer>
        </article>
    </main>
{% endblock %}
